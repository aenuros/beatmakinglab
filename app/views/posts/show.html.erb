<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<% if @post.audio.attached? %>
<!-- @post.audio.present? will always return true, use attached? to check presence -->
  <p>
    <strong>audio:</strong>
    <br>
    <%= audio_tag(url_for(@post.audio)) %>

<audio controls>
    <source src="<%= url_for(@post.audio) %>" type="audio/mp3">
</audio>
        <%#= @post.audio %>

  </p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
